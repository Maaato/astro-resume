---
import { basics } from "@/assets/docs/cv-es.json";
import Section from "@/components/Section.astro";
import Mail from "@/assets/icons/Mail.astro";
import Phone from "@/assets/icons/Phone.astro";
import X from "@/assets/icons/X.astro";
import LinkedIn from "@/assets/icons/LinkedIn.astro";
import GitHub from "@/assets/icons/github.astro";
import WorldMap from "@/assets/icons/WorldMap.astro";

const { name, label, image, location, profiles, phone, email } = basics;
const { city, region } = location;

const SOCIAL_ICONS: Record<string, any> = {
    GitHub,
    LinkedIn,
    X,
};

const contactInfoList = [email, phone, profiles.find(({ network }) => network === "LinkedIn")?.url];
---

<Section>
    <div class="container">
        <div class="info">
            <h1>{name}</h1>
            <h2>{label}</h2>
            <span>
                <WorldMap />
                {city}, {region}
            </span>
            <footer class="print">
                {contactInfoList.map((info) => <span>{info}</span>)}
            </footer>
            <footer class="no-print">
                {
                    email && (
                        <a
                            title={`Enviar un correo electrÃ³nico a ${name}`}
                            href={`mailto:${email}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Mail />
                        </a>
                    )
                }

                {
                    phone && (
                        <a
                            title={`Llamar por telefono a ${name}`}
                            href={`tel:${phone}`}
                            target="_blank"
                            rel="noopener noreferrer"
                        >
                            <Phone />
                        </a>
                    )
                }

                {
                    profiles.map(({ network, url }) => {
                        const Icon = SOCIAL_ICONS[network];
                        return (
                            <a
                                title={`Visitar el perfil de ${name} en ${network}`}
                                href={url}
                                target="_blank"
                                rel="noopener noreferrer"
                            >
                                <Icon />
                            </a>
                        );
                    })
                }
            </footer>
        </div>
        <figure>
            <img src={image} alt={name} />
        </figure>
    </div>
</Section>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        gap: 1rem;
    }

    .info {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        padding-right: 32px;
    }

    h1 {
        font-size: 2rem;
    }

    h2 {
        color: var(--color-gray-400);
        font-weight: 500;
        font-size: 1.1rem;
        text-wrap: balance;
    }

    img {
        aspect-ratio: 1 / 1;
        object-fit: cover;
        width: 128px;
        border-radius: 8px;
    }

    span {
        color: var(--color-gray-600);
        display: flex;
        align-items: center;
        gap: 0.25rem;
        font-size: 0.85rem;
        letter-spacing: -0.05rem;
    }

    footer[class="print"] {
        display: flex;
        flex-direction: column;
        gap: 0.3rem;
    }

    footer {
        color: var(--color-gray-500);
        font-size: 0.65rem;
        display: flex;
        gap: 4px;
        margin-top: 8px;
    }

    footer a {
        color: var(--color-gray-700);
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border: 1px solid var(--color-gray-200);
        padding: 4px;
        height: 32px;
        width: 32px;
        border-radius: 6px;
        transition: all 0.3s ease;
    }

    footer a:hover {
        background-color: var(--color-gray-200);
        border: 1px solid var(--color-gray-800);
    }
</style>
